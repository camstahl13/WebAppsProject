@page
@model LoginModel

@{
    ViewData["Title"] = "Access APE";
    Layout = "_accountLayout";
}

    <div id="options">
        <a id="resend-confirmation" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
        <a id="forgot-password" asp-page="./ForgotPassword">Reset</a>
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend</a>
    </div>
    <form id="account" method="post">
        <div class="login-cred">
    <label asp-for="Input.UserName">
        <input asp-for="Input.UserName" autocomplete="username" aria-required="true" />
        <span>Username<span asp-validation-for="Input.UserName" class="text-danger"></span></span>
            </label>
               
            <label asp-for="Input.Password">
                <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                <span>Password<span asp-validation-for="Input.Password" class="text-danger"></span></span>
            </label>
        </div>
        <section>
            <button class="btn login-btn" type="submit" id="login-submit">Sign In</button>
        </section>

        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert">

        </div>
    </form>
    <div class="checkbox mb-3">
        <label asp-for="Input.RememberMe" class="form-label">
            <input class="form-check-input" asp-for="Input.RememberMe" />
            @Html.DisplayNameFor(m => m.Input.RememberMe)
        </label>
    </div>
    <div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
